.avatar{
    height: 48rpx;
    flex: 0 0 48rpx;
    margin-right: 20rpx;
}
.avatar image {
    width: 48rpx;
    height: 48rpx;
    border-radius: 4rpx;
    display: block;
}
.middle{
    flex: 1 1 auto;
    margin-top: 6rpx;
    padding-right: 30rpx;
}
.fade{
    font-size: 24rpx;
    color: #ccc;
    height: 30rpx;
    line-height: 30rpx;
}
.node{
    background-color: #f5f5f5;
    padding: 6rpx;
    border-radius: 4rpx;
    text-align: center;
    color: #999;
}
.user-name{
    color: #778087;
    word-break: break-all;
    font-weight: bold;
}
.info-title{
    color: #778087;
    word-break: break-all;
    font-size: 32rpx;
    margin: 10rpx 0;
}
.reply{
    font-size: 24rpx;
    color: #ccc;
}
.reply-by{
    color: #778087;
    word-break: break-all;
    font-weight: bold;
}
.reply-num{
    flex: 0 0 80rpx;
}
.num{
    height: 20rpx;
    line-height: 20rpx;
    font-size: 26rpx;
    color: #fff;
    border-radius: 24rpx;
    background-color: #aab0c6;
    margin-top: 56rpx;
    margin-right: 10rpx;
    padding: 6rpx 0rpx;
    text-align: center;
    vertical-align: middle;
    font-weight: 700;
}